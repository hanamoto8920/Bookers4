<!--トップページ-->

<%= notice %>

<h1>User info</h1>
<p><%= link_to 'マイページ', user_path(current_user.id) %></p>



<!--一覧部分-->
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%=  link_to book.title, book_path(book.id) %></td>
        <td><%=  book.body %></td>
     
      </tr>
    <% end %>
  </tbody>

</table>


<!--投稿部分-->
<h1>New book</h1>
<!-- form_with部分 -->

<%= form_with model:@book, url: books_path, local:true do |f| %>

   <!--エラー文章部分-->
  <% if @book.errors.any? %>
        <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
        
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>