<!--編集画面-->

<%= notice %>

<h1>Editing Book</h1>

<%= form_with model:@book, url: book_path(@book.id), local:true do |f| %>
   <!--エラー文章部分-->
  <% if @book.errors.any? %>
        <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
        
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
   <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <%= link_to "Show", book_path(@book.id) %>

  <%= link_to "Back", books_path %>

<% end %> 